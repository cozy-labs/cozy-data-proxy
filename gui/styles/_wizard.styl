.wizard
  overflow hidden
  width 100vw
  height 100vh
  position relative

.on-step-address
  .step
    transform translate(-100vw, 0)

.on-step-folder
  .step
    transform translate(-200vw, 0)

.step
  position absolute
  left 0
  top 0
  display flex
  justify-content space-between
  align-items center
  width 100vw
  height 100vh
  transition transform .2s ease-out, background-color .1s
  will-change transform

  h1
    color charcoal-grey
    font-size: 1.5rem

a.more-info
  display: inline-block
  color dodger-blue
  padding-top em(13px, 14px)
  margin-left .25em
  text-decoration: none


.step-content
  flex 0 1 40em
  max-width: 35em
  margin auto
  padding 3em 1em

.btn
  @extend $button
  @extend $button--regular
  width: 100%
  font-size: 1.1em
  margin 1em 0 0 0

  // TODO figure out why we need to add that for
  // properly placed spinner
  &[aria-busy=true]
    &::after
        width 1em
        height 1em
        position   relative
        top        .3em


.step-address .coz-form-group
  @extend $form .coz-form-group
  @extend $form-text
  margin-bottom: 1em
.step-address label
  @extend $form .coz-form-label
  font-size: 1em
.step-address .https-input-wrapper
  display: flex
  flex-direction: row
  span
    flex 0 0
    padding: 0.9em 0.3em
    font-size: 1.1em
    color black
  input
    flex 1 0
.step-address .cozy-form-tip
  font-style: italic
  color grey


.folder__selector
  @extend $form-select select
  width: 100%
  font-size: 1.1em
  line-height: 1em
  margin 0
  text-align left
  text-decoration: none

.step-address
  left 100vw

.step-folder
  left 200vw
  .svg-wrapper
    background-color: emerald
  &.step-error
    .folder-helper
      color black
    .folder__selector
      border-color: pomegranate
    .error-message
      margin .5em 0

.step-error
  color pomegranate
  .svg-wrapper
    background-color pomegranate
  .btn
    opacity  .5
    cursor   not-allowed

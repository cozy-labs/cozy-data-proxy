{
  "private": true,
  "author": "Cozy Cloud <contact@cozycloud.cc> (https://cozycloud.cc/)",
  "license": "AGPL-3.0",
  "build": {
    "appId": "io.cozy.desktop",
    "win": {
      "certificateSubjectName": "Cozy Cloud SAS",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "cozy-ui": "^0.1.7",
    "cross-env": "^4.0.0",
    "debug-menu": "^0.6.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.12",
    "electron-builder": "^16.6.1",
    "elm": "^0.18.0",
    "elm-upgrade": "^0.18.7",
    "standard": "^10.0.2",
    "stylus": "^0.54.5"
  },
  "scripts": {
    "build": "npm run build:css & npm run build:tx && npm run build:elm",
    "build:css": "stylus -c -u cozy-ui/lib/stylus styles/app.styl -o app/",
    "build:elm": "elm make lib/Main.elm --output app/elm.js || true",
    "build:lib": "cd .. && npm run build",
    "build:tx": "tx pull --all || true",
    "clean": "rm -rf app/elm.js app/app.css* dist/",
    "codesign-verify": "codesign --verify --deep --strict --verbose=2 dist/mac/cozy-desktop-gui.app",
    "copy:lib": "rsync -av ../lib/ ./app/node_modules/cozy-desktop/lib",
    "dist": "npm run _dist",
    "_dist": "build --x64 --ia32",
    "lint": "standard --verbose app/main.js app/ports.js",
    "pack": "npm run _pack",
    "_pack": "build --dir",
    "postinstall": "npm run postinstall:electron && npm run postinstall:elm",
    "postinstall:electron": "install-app-deps",
    "postinstall:elm": "elm-package install -y",
    "reinstall": "bash -c 'rm -rf ./app/node_modules' && yarn",
    "release:build": "yarn release:check:node-6 && yarn release:build:lib && yarn reinstall && yarn build && yarn dist && yarn release:fix",
    "release:build:lib": "cd .. && yarn release:build",
    "release:check:node-6": "node -e \"(process.versions.node.split('.')[0] !== '6') && process.exit(1)\"",
    "release:fix": "node ./dev/fix-dist-artifacts.js",
    "start": "cross-env COZY_DESKTOP_HEARTBEAT=5000 electron ./app",
    "up": "npm run build:lib && npm run copy:lib && DEBUG=true npm start",
    "watch": "env WATCH=true npm run start & npm run watch:css & npm run watch:elm & npm run watch:js",
    "watch:css": "stylus -m -u cozy-ui/lib/stylus -w styles/app.styl -o app/",
    "watch:elm": "chokidar 'lib/**/*.elm' -c 'npm run build:elm'",
    "watch:js": "chokidar app/main.js app/ports.js -c 'npm run lint'",
    "elm-upgrade": "npm install --save-dev elm@latest elm-upgrade@latest && ./node_modules/.bin/elm-upgrade"
  }
}
